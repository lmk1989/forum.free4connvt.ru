<?xml version = '1.0' encoding = 'UTF-8'?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <filter>
        <filter-name>URLHandler</filter-name>
        <filter-class>viewhandler.URLHandler</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>URLHandler</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/404.html</location>
    </error-page>
    <listener>
          <listener-class>viewhandler.SessionListener</listener-class>
    </listener>
    <welcome-file-list>
          <welcome-file>main.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>
            jdbc/free4connvt_forum_connDS
        </res-ref-name>
        <res-type>
            javax.sql.DataSource
        </res-type>
        <res-auth>
            Container
        </res-auth>
    </resource-ref>
    <context-param>
        <description/>
        <param-name>
            org.apache.myfaces.trinidad.CHECK_FILE_MODIFICATION
        </param-name>
        <param-value>true</param-value>
    </context-param>
</web-app>